{
    "tasks": [
        {
            "type": "cppbuild",
            "label": "C/C++: cl.exe build active file",
            "command": "cl.exe",
            "args": [
                "/Zi",
                "/EHsc",
                "/nologo",
                "/std:c++20",
                // "/O2",
                "/Fo${workspaceFolder}/build/",
                "/Fd${workspaceFolder}/build/",
                "/Fe${workspaceFolder}/build/\\${fileDirnameBasename}.exe",
                "${fileDirname}/*.cpp",
                "${workspaceFolder}/tools/*.cpp"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$msCompile"
            ],
            "group": "build",
            "detail": "Task generated by Debugger."
        },
        {
            "type": "cppbuild",
            "label": "C/C++: g++ build active file",
            "command": "/usr/bin/g++",
            "args": [
                "-std=c++2a",
                "-O3",
                "-fdiagnostics-color=always",
                "-g",
                "${fileDirname}/*.cpp",
                "${workspaceFolder}/tools/*.cpp",
                "-o",
                "${workspaceFolder}/build/${fileDirnameBasename}"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "Task generated by Debugger."
        }
    ],
    "version": "2.0.0"
}